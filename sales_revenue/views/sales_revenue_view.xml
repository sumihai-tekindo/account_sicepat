	<!-- TREE -->
	<record id="action_sales_rev_tree_view" model="ir.ui.view">
		<field name="name">sales.revenue.rpt.tree</field>
		<field name="model">sales.revenue.rpt</field>	
		<field name="arch" type="xml">
			<form string="Sales Revenue">
				<field name="invoice_date"/>          
				<field name="user_id" string="Sales"/>
				<field name="partner_id" groups="base.group_user"/>
				<field name="join_date" string="Join Date"/>
				<field name="will_be_count" string="Will Be Count"/>
				<field name="weight"/>
				<field name="gross_amount" string="Gross Revenue"/>
				<field name="discount"/>
				<field name="quantity"/>
				<field name="discount_amount"/>
				<field name="refund" invisible="1"/>
				<field name="gross_amount" sum="Total Amount" string='Net Revenue'/>
				<field name="service_type"/>
			</form>
		</field>
	</record>
	<!-- CRUD -->
	<record id="sales_rev_form_view" model="ir.actions.act_window">
		<field name="name">Sales_Revenue.form</field>
		<field name="res_model">sales.revenue.rpt</field>
